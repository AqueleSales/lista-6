#include <stdio.h>
#include <string.h>

int main() {
    int i, tem_n = 0, tem_M = 0, tem_m = 0;
    char senha[101];

    // Entrada da senha
    printf("Digite sua senha:\n(Pelo menos um numero, uma letra maiuscula e uma letra minuscula)\n");
    scanf("%s", senha);

    // Loop para verificar a presença de número, maiúscula e minúscula
    for (i = 0; i < strlen(senha); i++) {
        if (senha[i] >= '0' && senha[i] <= '9') {
            tem_n = 1; // Encontrou um número
        }
        if (senha[i] >= 'A' && senha[i] <= 'Z') {
            tem_M = 1; // Encontrou uma letra maiúscula
        }
        if (senha[i] >= 'a' && senha[i] <= 'z') {
            tem_m = 1; // Encontrou uma letra minúscula
        }
    }

    // Verifica o comprimento da senha
    if (strlen(senha) < 8 || strlen(senha) > 100) {
        printf("A senha deve ter entre 8 e 100 caracteres.\n");
    }

    // Verifica se todos os critérios foram atendidos
    if (tem_n && tem_M && tem_m) {
        printf("Senha válida!\n");
    } else {
        printf("Erro: a senha deve conter pelo menos um número, uma letra maiúscula e uma letra minúscula.\n");
    }

    return 0;
}
