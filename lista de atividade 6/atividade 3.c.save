#include <stdio.h>
#include <string.h>

int main() {
    char str[101];
    printf("Digite uma palavra ou frase:\n");
    scanf("%s", str);

    printf("String de trás para frente: ");
    for (int i = strlen(str) - 1; i >= 0; i--) {
        printf("%c", str[i]);
    }
    printf("\n");

    return 0;
}
